{{#section 'js'}}
<script src="/public/js/main.js"></script>
{{/section}}
<div class="card shadow">

    <div class="card-header d-flex justify-content-between">
        <h4>Users</h4>
        <a class="btn btn-outline-success" href="/admin/songs/add" role="button">
            <i class="fa fa-plus" aria-hidden="true"></i>
            Add Song
        </a>
    </div>
    <div class="card-body">
        <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Song Name</th>
                    <th style="max-width: 300px;">Uri</th>
                    <th>Category ID</th>
                    <th>Artist ID</th>
                    <th>Edit</th>
                </tr>
            </thead>

            <tfoot>
                <tr>
                    <th>#</th>
                    <th>Song Name</th>
                    <th style="max-width: 300px;">Uri</th>
                    <th>Category ID</th>
                    <th>Artist ID</th>
                    <th>Edit</th>
                </tr>
            </tfoot>

            <tbody>
                {{#each this.songs}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{name}}</td>
                    <td style="max-width: 300px;">{{uri}}</td>
                    <td>{{categoryId}}</td>
                    <td>{{artistId}}</td>
                    <td>
                        <a name="" id="" class="btn btn-sm btn-primary" title="Edit" href="/admin/songs/edit/{{id}}"
                            role="button">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>

        </table>
    </div>

</div>