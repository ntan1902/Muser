{{#section 'js'}}
    <script src="/public/js/main.js"></script>
{{/section}}
<div class="card shadow">

    <div class="card-header d-flex justify-content-between">
        <h4>Users</h4>
        <a class="btn btn-outline-success" href="/admin/artists/add" role="button">
            <i class="fa fa-plus" aria-hidden="true"></i>
            Add Artist
        </a>
    </div>
    <div class="card-body">
        <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Full Name</th>
                    <th>Edit</th>
                </tr>
            </thead>

            <tfoot>
                <tr>
                    <th>#</th>
                    <th>Full Name</th>
                    <th>Edit</th>
                </tr>
            </tfoot>

            <tbody>
                {{#each this.artists}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{name}}</td>
                        <td>
                            <a name="" id="" class="btn btn-sm btn-primary" title="Edit" href="/admin/artists/edit/{{id}}"
                                role="button">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>

        </table>
    </div>

</div>