{{#section 'css'}}
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css">
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/css/fileinput.min.css">

{{/section}}

{{#section 'js'}}
    <script
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
    {{!-- File Upload> --}}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/js/fileinput.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/themes/fa/theme.min.js"></script>

    <script>
        $('#txtAvatar').fileinput({
            theme: 'fa',
            allowedFileExtensions: ['jpg', 'png'],
            dropZoneEnabled: false,
        });
    </script>
    {{!-- < File Upload --}}
    <script>

        $('#frmEdit').on('submit', function (e) {
            e.preventDefault();

            const name = $('#txtName').val();

             if (name.length === 0) {
                Swal.fire({
                    title: 'Error!',
                    text: 'Invalid Name',
                    icon: 'error',
                    confirmButtonText: 'Retry'
                })
                return;
            } else {
                Swal.fire({
                    position: 'center',
                    icon: 'success',
                    title: 'Change successfully',
                    showConfirmButton: false,
                    timer: 1000
                }).then(function () {
                    $('#frmEdit').off('submit').submit();
                });

            }
        })
    </script>

{{/section}}
<form id="frmEdit" method="POST" action="" enctype="multipart/form-data">
    <div class="card">
        <div class="card-header">
            <h4>Artist</h4>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label for="txtID">#</label>
                <input type="text" class="form-control" id="txtID" name="id" readonly value="{{this.artist.id}}">
            </div>

            <div class="form-group">
                <label>Preview Avatar</label> <br>
                <img style="width: 200px;" src="{{this.artist.imageURL}}" alt="no preview image found">
            </div>
            <input type="hidden" value="{{this.artist.imageURL}}" name="previewAvatar">

            <div class="form-group">
                <label for="txtAvatar">New Avatar</label>
                <input type="file" class="form-control-file" id="txtAvatar" name="avatar">
            </div>

            <div class="form-group">
                <label for="txtEmail">Name</label>
                <input type="text" class="form-control" id="txtName" name="name" value="{{this.artist.artistName}}" >
            </div>

        </div>
        <div class="card-footer">
            <a class="btn btn-primary" href="/admin/artists" role="button">
                <i class="fa fa-backward" aria-hidden="true"></i>
                Back to List
            </a>
            <button class="btn btn-success" type="submit">
                <i class="fa fa-check" aria-hidden="true"></i>
                Save
            </button>
        </div>
    </div>
</form>