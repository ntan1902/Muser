{{!--< Editor --}} 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
    {{!-- File Upload> --}}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/js/fileinput.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/themes/fa/theme.min.js"></script>

    <script>
        $('#txtAvatar').fileinput({
            theme: 'fa',
            allowedFileExtensions: ['jpg', 'png'],
            dropZoneEnabled: false,
        });
    </script>
    {{!-- < File Upload --}}
    <script>

        function checkEmail(email) {
            if (/^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/.test(email)) {
                return true;

            } else {
                return false;
            }
        }


        $('#frmEdit').on('submit', function (e) {
            e.preventDefault();

            const name = $('#txtName').val();
            const email = $('#txtEmail').val();
            const description = $('#txtUserDescription').val();

            if (checkEmail(email) === false) {
                Swal.fire({
                    title: 'Error!',
                    text: 'Invalid email',
                    icon: 'error',
                    confirmButtonText: 'Retry'
                })
                return;
            } else if (name.length === 0) {
                Swal.fire({
                    title: 'Error!',
                    text: 'Invalid Name',
                    icon: 'error',
                    confirmButtonText: 'Retry'
                })
                return;
            } else {
                Swal.fire({
                    position: 'center',
                    icon: 'success',
                    title: 'Change successfully',
                    showConfirmButton: false,
                    timer: 1000
                }).then(function () {
                    $('#frmEdit').off('submit').submit();
                });

            }
        })
    </script>

    {{/section}}
    <form id="frmEdit" method="POST" action="" enctype="multipart/form-data">
        <div class="card">
            <div class="card-header">
                <h4>User</h4>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="txtID">#</label>
                    <input type="text" class="form-control" id="txtID" name="id" readonly
                        value="{{this.user.id}}">
                </div>
                
                <div class="form-group">
                    <label>Preview Avatar</label> <br>
                    <img style="width: 200px;" src="{{this.user.avatar}}" alt="no preview image found">
                </div>
                <input type="hidden" value="{{this.user.avatar}}" name="previewAvatar">

                <div class="form-group">
                    <label for="txtAvatar">New Avatar</label>
                    <input type="file" class="form-control-file" id="txtAvatar" name="avatar">
                </div>

                <div class="form-group">
                    <label for="txtEmail">Email</label>
                    <input type="text" class="form-control" id="txtEmail" name="email" value="{{this.user.email}}" readonly>
                </div>

                <div class="form-group">
                    <label for="txtName">FullName</label>
                    <input type="text" class="form-control" id="txtName" name="name"
                        value="{{this.user.name}}">
                </div>

                <div class="form-group">
                    <label for="txtUserDescription">User Description</label>
                    <textarea class="form-control" id="txtUserDescription"
                        name="userDescription">{{this.user.userDescription}}</textarea>
                </div>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" href="/admin/users" role="button">
                    <i class="fa fa-backward" aria-hidden="true"></i>
                    Back to List
                </a>
                <button class="btn btn-success" type="submit">
                    <i class="fa fa-check" aria-hidden="true"></i>
                    Save
                </button>
            </div>
        </div>
    </form>